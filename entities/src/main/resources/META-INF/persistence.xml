<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="SteamFM_EntitiesPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>br.com.lp3.entities.Musica</class>
        <class>br.com.lp3.entities.GeneroJogo</class>
        <class>br.com.lp3.entities.Album</class>
        <class>br.com.lp3.entities.Usuario</class>
        <class>br.com.lp3.entities.Artista</class>
        <class>br.com.lp3.entities.Relacao</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/STEAMFM"/>
            <property name="javax.persistence.jdbc.user" value="mack"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.password" value="mack"/>
        </properties>
    </persistence-unit>
</persistence>
